{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/es5-unbundled",
   "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      },
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
        "destination": "/index.html"
      },
      {
        "source": "/src/common-worker-scope.js",
        "destination": "/bower_components/app-storage/app-indexeddb-mirror/common-worker-scope.js"
      }
    ],
    "headers": [
      {
        "source": "/",
        "headers": [{"key": "Link", "value": "</src/dapp-app.html>;rel=preload;as=document,</src/dapp-home.html>;rel=preload;as=document</bower_components/webcomponentsjs/custom-elements-es5-adapter.js>;rel=preload;as=script,</bower_components/webcomponentsjs/webcomponents-loader.js>;rel=preload;as=script,"}]
      },
      {
        "source": "/post/*",
        "headers": [{"key": "Link", "value": "</src/dapp-app.html>;rel=preload;as=document,</src/dapp-post.html>;rel=preload;as=document</bower_components/webcomponentsjs/custom-elements-es5-adapter.js>;rel=preload;as=script,</bower_components/webcomponentsjs/webcomponents-loader.js>;rel=preload;as=script,"}]
      }
    ]
  }
}
