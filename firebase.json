{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/es6-unbundled",
   "rewrites": [
      {
        "source": "!/__/**",
        "destination": "/index.html"
      },
      {
        "source": "**/!(*.js|*.html|*.css|*.json|*.svg|*.png|*.jpg|*.jpeg)",
        "destination": "/index.html"
      },
      {
        "source": "/src/common-worker-scope.js",
        "destination": "/bower_components/app-storage/app-indexeddb-mirror/common-worker-scope.js"
      }
    ],
    "headers": [
      {
        "source": "/",
        "headers": [{"key": "Link", "value": "</bower_components/polymerfire/polymerfire.html>;rel=preload;as=document,</bower_components/polymerfire/polymerfire.html>;rel=preload;as=document,</src/shared-styles.html>;rel=preload;as=document"}]
      }
    ]
  }
}
